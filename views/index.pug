extends layout

block content
 .nav
  h1 Library Manager
  
  
  p 
    a.button(href="books/new") Create Book
  include search  
  
 h2.results-text= `Total entries found: ${count}`
  
 .table
  table 
    thead 
      tr 
         th Title 
         th Author 
         th Genre 
         th Year 
    tbody 
      each book in books 
       tr 
         td 
           a(href=`/books/${book.id}`)  #{book.title}
         td= book.author 
         td= book.genre 
         td= book.year 
 include pagination         
         
           
  
  